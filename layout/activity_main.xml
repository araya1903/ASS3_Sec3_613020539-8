<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/cute"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/iumageView"
            android:layout_height="wrap_content"
            android:text="Happy Birthday!"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="310dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iumageView"
            android:layout_height="wrap_content"
            android:text="สุขสันต์วันเกิดย้อนหลังนะพี่โต่ย มีความสุขมากๆนะคะ"
            android:background="#ff0f"
            android:textSize="23sp"/>
        <ImageView
            android:id="@+id/iumageView"
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:layout_centerInParent="true"
            android:src="@drawable/sattra"/>
    </RelativeLayout>
</RelativeLayout>